/* miniprogram/pages/user/user.wxss */

page {
    margin: 0;
    padding: 0;
    background-color: #F3F5F7;
}

.head {
    width: 100%;
    height: 240rpx;
    display: flex;
    box-sizing: border-box;
    background-color: #DB4632;
}

.avatar-wrapper {
    width: 160rpx;
    height: 160rpx;
    border-radius: 50%;
    margin-top: 40rpx;
    margin-left: 40rpx;
    margin-bottom: 40rpx;
    border: 2px solid #E3796B;
    background-color: #fff;
    text-align: center;
}

.avatar {
    width: 120rpx;
    height: 120rpx;
    padding-top: 20rpx;
}

.login-sign {
    color: #fff;
    line-height: 240rpx;
    font-size: 32rpx;
    padding-left: 20rpx;
}

.all_icon, .to-log {
    width: 24rpx;
    height: 24rpx;
    position: absolute;
    right: 10rpx;
    padding-top: 10rpx;
}

.to-log {
    top: 100rpx;
}

.options {
    width: 750rpx;
    /* height: 140rpx; */
    background-color: #fff;
    display: flex;
    font-size: 28rpx;
}

.wrapper, .myorders {
    /* width: 20%; */
    margin-top: 35rpx;
    margin-bottom: 40rpx;
    /* margin-right: 40rpx; */
    /* box-sizing: border-box; */
}

.wrapper {
    padding-left: 30rpx;
    padding-right: 35rpx;
}

.myorders {
    padding-left: 30rpx;
    border-left: 1px solid #EEEEEE;
}

.icons{
    width: 60rpx;
    height: 60rpx;
    padding-left: 10rpx;
}

.sell-service, .order {
    padding-left: 24rpx;
}


.text {
    padding-top: 15rpx;
}

.fc-items {
    background-color: #fff;
    font-size: 32rpx;
    padding-top: 20rpx;
    padding-left: 20rpx;
    padding-bottom: 20rpx;
    margin-top: 1px;
}

