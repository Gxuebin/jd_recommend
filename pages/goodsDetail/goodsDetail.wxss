@import "../../style/comment.wxss";
page {
    width: 100%;
    height: 100%;
    /* margin-left: 20rpx;
    margin-right: 20rpx; */
    background-color: #EEEEEE;
}

.contain {
    width: 100%;
    height: 750rpx;
    background-color: #fff;
}

.media-box__hd {
    width: 100%;
    height: 400rpx;
    text-align: center;
    padding-bottom: 55rpx;
    /* background-color: green; */
}

.media-box__thumb {
    width: 400rpx;
    height: 400rpx;
    /* padding-bottom: 60rpx; */
}

.media-box__bd {
    /* width: 100%; */
    padding-left: 30rpx;
    padding-right: 30rpx;
    
    background-color: #fff;
    /* padding-bottom: 50rpx; */
    /* margin-top: 60rprx; */
}

.media-box__sc {
    color: #C8C8C8;
    font-size: 28rpx;
    padding-bottom: 40rpx;
}

.media-box__title {
    padding-bottom: 40rpx;
}

.media-box__price {
    color: #DE554F;
    padding-bottom: 40rpx;
}

.media-box__line {
    height: 0.5px;
    border-top: 1px solid #ddd;
    padding-bottom: 46rpx;
    /* text-align: center; */
}

.media-box__emphasis {
    font-weight: bold;
    font-size: 32rpx;
    padding-bottom: 46rpx;
}

.media-box__detail {
    font-size: 32rpx;
    line-height: 2;
    padding-right: 30rpx;
    height: 100%;
    /* margin-bottom: 2px; */
}

.media-box__btn {
    background-color: #EEEEEE;
    width: 100%;
    height: 45px;
    position: fixed;
    z-index: 999;
    bottom: 0;
    padding-bottom: 5px;
}

.all_icon {
    width: 24rpx;
    height: 24rpx;
    position: absolute;
    right: 30rpx;
    padding-top: 10rpx;
}

.head-to-jd {
    display: block;
    width: 690rpx;
    height: 40px;
    text-align: center;
    line-height: 40px;
    background-color: #DE554F;
    margin-top: 5px;
    margin-left: 30rpx;
    color: #fff;
    font-weight: normal;
    border-radius: 5px;
}